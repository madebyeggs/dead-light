<header role="banner">
	<button type="button" class="drawer-toggle drawer-hamburger">
    	<span class="sr-only">toggle navigation</span>
      	<span class="drawer-hamburger-icon"></span>
    </button>

    <nav class="drawer-nav" role="navigation">
    	<ul class="drawer-menu">
       		<li><%= link_to 'Dead Light', root_path, :class => "drawer-brand" %></li>
			<li><%= mail_to "info@dead-light.com", 'Contact', :class => "drawer-menu-item" %></li>
			<% if user_signed_in? %>
					<li>{ Logged in as <strong><%= current_user.email %></strong> }</li>
					<li><%= link_to 'Edit', edit_user_registration_path %></li>
					<li><%= link_to 'Logout', destroy_user_session_path, :method => :delete %></li>
			<% end %>
      	</ul>
	</nav>
</header>