html, body { 
	margin:0px;
	padding:0px;
	background-color:#fdfbf9;
}
a, a:hover, a:visited {text-decoration:none;color:#000000;}

.headline {
	background:
	    linear-gradient(
	      rgba(0, 0, 0, 0.65), 
	      rgba(0, 0, 0, 0.65)
	    ),
	    url(<%= asset_path 'newBackground.jpg' %>) no-repeat center center fixed;
	width:100%;
	height:325px;
	background-size: cover;
	display:table;
}

.title {
	text-align:center;
	vertical-align: middle;
	display: table-cell;
}
.date {
	position: absolute;
	left: 50%;
	top: 280px;
	transform: translate(-50%, -0%);
	height: 20%;
	text-align:center;
}
.row {margin:70px 0px 140px 0px;}
.coverSquare {overflow: hidden;border:1px solid #e9e9e9;max-width:100%;}
.coverSquare {max-width: 100%;}
.info {padding-right:40px;}
.picture {padding-left:40px;}
.releaseInfo {float:left;clear:both;margin:20px 0px;}


.footer {
	background-color:#252423;
	width:100%;
	height:200px;
	background-size: cover;
	display:table;
}

.fa:first-child {margin-right:15px!important;}
.fa:nth-child(3) {margin-left:15px!important;}

@media screen and (max-width:991px) {
	.row {margin:0px 0px;}
	.info, .picture {padding:20px;}
}