<header role="banner">
	<button type="button" class="drawer-toggle drawer-hamburger">
    	<span class="sr-only">toggle navigation</span>
      	<span class="drawer-hamburger-icon"></span>
    </button>

    <nav class="drawer-nav" role="navigation">
    	<ul class="drawer-menu">
       		<li><%= link_to 'Dead Light', root_path, :class => "drawer-brand" %></li>
			<li><%= link_to 'News', root_path, :class => "drawer-menu-item" %></li>
        	<li class="drawer-dropdown">
				<a class="drawer-menu-item" data-target="#" href="#" data-toggle="dropdown" role="button" aria-expanded="false">
		        	Releases <span class="drawer-caret"></span>
		        </a>
          		<ul class="drawer-dropdown-menu">
					<% @releases.each do |r| %>
						<li><%= link_to r.title, release_path(r), :class => "drawer-dropdown-menu-item" %></li>
					<% end %>
          		</ul>
        	</li>
        	</li>
      	</ul>
	</nav>
