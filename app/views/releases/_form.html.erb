<section id="dynamic_content" class="fading">
	<!-- tracklisting & pack shot -->
	<div class="band pad-bottom pad-top fading" id="section_tracklist" data-releaseid="02">
		<div class="row release-row">
			<!-- desktop-only content -->
			<div class="desktop-content">
		
				<div class="title grid-full">
					<h2>Add/edit your release content here</h2>
					<span class="border"></span>
				</div>

				<div class="formWrapper">
					<% if @release.errors.any? %>
						<div class="message warning">
							<% @release.errors.full_messages.each do |msg| %>
					   			<%= msg %><br/>
							<% end %>
						</div>
					<% end %>	
					<%= form_for(@release) do |f| %>
						<%= f.label :catalogue_number, class: "formText" %><br/>
		    			<%= f.text_field :artist, class: 'email text-area' %><br /><br />
						<%= f.label :title, class: "formText" %><br/>
			    		<%= f.text_field :title, class: 'email text-area' %><br /><br />
					 	<%= f.label :packshot, class: "formText"  %><br />
					 	<%= f.file_field :packshot, class: 'email text-area file-field'  %><br /><br />
						<%= f.label :description, class: "formText" %><br />
			    		<%= f.text_area :description, class: 'email text-areaArea' %><br /><br />
						<%= f.label :Video_URL, class: "formText" %><br />
			    		<%= f.text_field :url, class: 'email text-area' %><br /><br />
						<%= f.label :Physical_buy_link, class: "formText" %><br />
			    		<%= f.text_field :buylink1, class: 'email text-area' %><br /><br />
						<%= f.label :Digital_buy_link, class: "formText" %><br />
			    		<%= f.text_field :buylink2, class: 'email text-area' %><br /><br />
						<%= f.label :tracklist, class: "formText" %><br />
			    		<%= f.text_area :tracklist, class: 'email text-areaArea' %><br /><br />
			    		<%= f.submit %>
					<% end %>
				</div>
				
			</div>
		</div>
	</div>
</section>